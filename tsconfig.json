      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "dist"
    },
    "ts-node": {
        "esm": true
    },
    "include": ["src/**/*"],
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Recommended"
  }